{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{{ form_start(registrationForm) }}
	 <div class="flex min-h-screen flex-col justify-center px-6 lg:px-8">
		<div class="sm:mx-auto sm:w-full sm:max-w-sm">
			<h1 class="text-center text-4xl font-bold text-indigo-500 font-sans leading-9 tracking-tight">
				Inscription
			</h1>
		</div>

		<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm space-y-6">
			<div>
				{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-slate-400'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
				</div>
			</div>

			<div>
				{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-slate-400'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
				</div>
			</div>

			<div>
				{{ form_label(registrationForm.name, 'Pseudo', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-slate-400'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.name, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
				</div>
			</div>

			<div class="relative flex gap-x-3">
				<div class="flex h-6 items-center">
					{# <input id="comments" name="comments" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-500 focus:ring-indigo-600"> #}
          {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 rounded border-gray-300 text-indigo-500 focus:ring-indigo-600'}}) }}
				</div>
				<div class="text-sm leading-6">
					{# <label for="comments" class="font-medium text-gray-900">Comments</label> #}
          {{ form_label(registrationForm.agreeTerms, 'Accepter les termes', {'label_attr': {'class': 'font-medium text-slate-400'}}) }}
				</div>
			</div>

			<div>
				<button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
					S'inscire
				</button>
			</div>

			{{ form_widget(registrationForm._token) }}
		</div>
	</div>
	{{ form_end(registrationForm) }}
{% endblock %}
